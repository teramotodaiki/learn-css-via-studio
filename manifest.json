{
  "manifest_version": 2,
  "name": "Learn CSS via STUDIO",
  "description": "HTML/CSS learning tool using STUDIO",
  "version": "1",
  "author": "Teramoto Daiki",
  "short_name": "Learn CSS via STUDIO",
  "icons": {
    "16": "icons/i16.png",
    "48": "icons/i48.png",
    "128": "icons/i128.png"
  },
  "minimum_chrome_version": "33",
  "content_scripts": [
    {
      "js": ["content.js"],
      "css": ["content.css"],
      "matches": ["https://preview.studio.design/*"]
    }
  ]
}
